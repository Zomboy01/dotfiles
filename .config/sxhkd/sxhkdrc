# screenshot
super + s
  screenshot select

super + shift + s
  screenshot

# browser
super + b
  firefox

# Files
super + f 
  nautilus

# rofi
super + d
  rofi -show drun -theme full

# emacs
alt + e
  pkill emacs ; emacs --daemon &

super + e
  emacsclient -c

# passmenu
alt + p
  passmenu -l 25

# sound
alt + l
  pamixer --allow-boost -i 2

alt + h
  pamixer --allow-boost -d 2

XF86AudioMute
  pamixer -t

# light
alt + k
  brillo -A 5 -q -u 300000

alt + j
  brillo -U 5 -q -u 300000

# make sxhkd reload its configuration files
super + Escape
        pkill -USR1 -x sxhkd
